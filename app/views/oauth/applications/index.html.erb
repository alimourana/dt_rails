<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>OAuth Applications</h1>
    <%= link_to 'New Application', new_oauth_application_path, class: 'btn btn-primary' %>
  </div>

  <% if @applications.any? %>
    <div class="row">
      <% @applications.each do |application| %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= application.name %></h5>
              <p class="card-text">
                <strong>Client ID:</strong> <code><%= application.uid %></code><br>
                <strong>Scopes:</strong> <%= application.scopes.present? ? application.scopes : 'None' %><br>
                <strong>Confidential:</strong> <%= application.confidential? ? 'Yes' : 'No' %>
              </p>
              <div class="btn-group" role="group">
                <%= link_to 'View', oauth_application_path(application), class: 'btn btn-outline-primary btn-sm' %>
                <%= link_to 'Edit', edit_oauth_application_path(application), class: 'btn btn-outline-secondary btn-sm' %>
                <%= link_to 'Delete', oauth_application_path(application), method: :delete, 
                    data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm' %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5">
      <h3>No OAuth Applications</h3>
      <p class="text-muted">You haven't created any OAuth applications yet.</p>
      <%= link_to 'Create your first application', new_oauth_application_path, class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
