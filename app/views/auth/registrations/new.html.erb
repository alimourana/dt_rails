<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h1 class="text-center">Sign Up</h1>
        </div>
        <div class="card-body">
          <%= form_with model: @user, url: auth_registration_path, local: true do |form| %>
            <% if @user.errors.any? %>
              <div class="alert alert-danger">
                <h4><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h4>
                <ul>
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <%= form.label :first_name, class: 'form-label' %>
                  <%= form.text_field :first_name, class: 'form-control', required: true %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <%= form.label :last_name, class: 'form-label' %>
                  <%= form.text_field :last_name, class: 'form-control', required: true %>
                </div>
              </div>
            </div>

            <div class="form-group mb-3">
              <%= form.label :email, class: 'form-label' %>
              <%= form.email_field :email, class: 'form-control', required: true %>
            </div>

            <div class="form-group mb-3">
              <%= form.label :encrypted_password, 'Password', class: 'form-label' %>
              <%= form.password_field :encrypted_password, class: 'form-control', required: true %>
            </div>

            <div class="form-group mb-3">
              <%= form.label :phone_number, class: 'form-label' %>
              <%= form.text_field :phone_number, class: 'form-control', required: true %>
            </div>

            <div class="form-group mb-3">
              <%= form.label :address_line, class: 'form-label' %>
              <%= form.text_field :address_line, class: 'form-control', required: true %>
            </div>

            <div class="row">
              <div class="col-md-4">
                <div class="form-group mb-3">
                  <%= form.label :city, class: 'form-label' %>
                  <%= form.text_field :city, class: 'form-control', required: true %>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group mb-3">
                  <%= form.label :state, class: 'form-label' %>
                  <%= form.text_field :state, class: 'form-control', required: true %>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group mb-3">
                  <%= form.label :country, class: 'form-label' %>
                  <%= form.text_field :country, class: 'form-control', required: true %>
                </div>
              </div>
            </div>

            <div class="d-grid">
              <%= form.submit 'Sign Up', class: 'btn btn-primary btn-lg' %>
            </div>
          <% end %>

          <div class="text-center mt-3">
            <p>Already have an account? <%= link_to 'Sign in', new_auth_session_path %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
