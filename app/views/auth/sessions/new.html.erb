<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h1 class="text-center">Sign In</h1>
        </div>
        <div class="card-body">
          <%= form_with url: auth_session_path, local: true do |form| %>
            <div class="form-group mb-3">
              <%= form.label :email, class: 'form-label' %>
              <%= form.email_field :email, class: 'form-control', required: true, autofocus: true %>
            </div>

            <div class="form-group mb-3">
              <%= form.label :password, class: 'form-label' %>
              <%= form.password_field :password, class: 'form-control', required: true %>
            </div>

            <div class="d-grid">
              <%= form.submit 'Sign In', class: 'btn btn-primary btn-lg' %>
            </div>
          <% end %>

          <div class="text-center mt-3">
            <p>Don't have an account? <%= link_to 'Sign up', new_auth_registration_path %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
